<div class="form" id="hub-section">
    <div>
        <p>Welcome, {{username}}!</p>
        <p>Your unique user id is <span id="user-id">{{_id}}</span></p>
        {{#if mediaList}}
        <p>Here are your current lists:</p>
            {{#list mediaList}}
                <a href="/medialist/{{_id}}">{{name}}</a>
            {{/list}}
        {{/if}}
    </div>

    <form action="/medialist/create" method="POST">
        <h2>Create new Group</h2>
        <div>
            <label for="group-name">Group Name:</label>
            <input type="text" id="group-name" placeholder="Group Name" name="group_name">
        </div>
        <div>
            <input class="submit-button" type="submit" value="CREATE">
        </div>
        {{#if errors}}
        <div class="error-container">
            <div>Error: </div>
            <div>
                {{errors}}
            </div>
        </div>
        {{/if}}
    </form>
</div>
